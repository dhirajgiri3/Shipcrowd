# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5005
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/shipcrowd
DATABASE_NAME=shipcrowd

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Configuration - ZeptoMail (Zoho)
# ================================================================
# ZeptoMail is a transactional email service by Zoho
# Documentation: https://www.zoho.com/zeptomail/
# SMTP Server: smtp.zeptomail.in | Ports: 587 (TLS), 465 (SSL)
EMAIL_SERVICE=smtp
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=ShipCrowd
SMTP_HOST=smtp.zeptomail.in
SMTP_PORT=587
SMTP_USER=emailapikey
SMTP_PASS=your-zeptomail-encrypted-api-key

# Email Retry Configuration (Optional)
EMAIL_MAX_RETRY=3
EMAIL_RETRY_DELAY_MS=1000

# Legacy - SendGrid (Alternative Option)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid Email Templates (Optional - Only if using SendGrid)
# SENDGRID_VERIFICATION_TEMPLATE_ID=
# SENDGRID_PASSWORD_RESET_TEMPLATE_ID=
# SENDGRID_WELCOME_TEMPLATE_ID=
# SENDGRID_SHIPMENT_STATUS_TEMPLATE_ID=
# SENDGRID_TEAM_INVITATION_TEMPLATE_ID=
# SENDGRID_EMAIL_CHANGE_TEMPLATE_ID=
# SENDGRID_EMAIL_CHANGE_NOTIFICATION_TEMPLATE_ID=
# SENDGRID_RECOVERY_EMAIL_TEMPLATE_ID=
# SENDGRID_OWNER_INVITATION_TEMPLATE_ID=

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# WhatsApp Configuration (Twilio)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# KYC Verification (DeepVue)
DEEPVUE_CLIENT_ID=your_deepvue_client_id
DEEPVUE_API_KEY=your_deepvue_api_key
DEEPVUE_DEV_MODE=true

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5005/api/v1/auth/google/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Encryption Key for PII/OAuth Tokens (CRITICAL - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# This key encrypts sensitive data like Aadhaar, PAN, Bank Account numbers, and OAuth tokens
# NEVER commit the actual key to version control
# Use different keys for dev/staging/production
ENCRYPTION_KEY=generate_64_char_hex_string_here

# Testing (Development Only)
TEST_PHONE_NUMBER=+1234567890
TEST_WHATSAPP_NUMBER=whatsapp:+1234567890

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
