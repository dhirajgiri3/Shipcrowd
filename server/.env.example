# Server Configuration
NODE_ENV=development
PORT=5005
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5005

# Database
MONGODB_URI=mongodb://localhost:27017/shipcrowd
DATABASE_NAME=shipcrowd

# JWT Secrets (GENERATE NEW ONES!)
JWT_ACCESS_SECRET=<run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))">
JWT_REFRESH_SECRET=<run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))">
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email - ZeptoMail
EMAIL_SERVICE=smtp
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=ShipCrowd
SMTP_HOST=smtp.zeptomail.in
SMTP_PORT=587
SMTP_USER=emailapikey
SMTP_PASS=your_zeptomail_api_key_here
EMAIL_MAX_RETRY=3
EMAIL_RETRY_DELAY_MS=1000

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_VERIFICATION_ENABLED=true
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxx
TEST_PHONE_NUMBER=+91XXXXXXXXXX

# WhatsApp
TWILIO_WHATSAPP_FROM=whatsapp:+1XXXXXXXXXX
TWILIO_WHATSAPP_TEMPLATE_SHIPMENT_STATUS=HXxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_TEMPLATE_WELCOME=HXxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_TEMPLATE_DELIVERY_CONFIRMATION=HXxxxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_DEV_MODE=true
TEST_WHATSAPP_NUMBER=+91XXXXXXXXXX

# DeepVue KYC
DEEPVUE_CLIENT_ID=your_deepvue_client_id
DEEPVUE_API_KEY=your_deepvue_api_key
DEEPVUE_DEV_MODE=true

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5005/api/v1/auth/google/callback

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=750024d17d1bda2728a23b4b309fbf0571d43722a17c5820123456789EFGH
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=<generate_secret>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Webhooks (CHANGE THESE!)
VELOCITY_WEBHOOK_SECRET=<run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
DEEPVUE_WEBHOOK_SECRET=<run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
BYPASS_WEBHOOK_VERIFICATION=false
ENABLE_WEBHOOK_METRICS=true
WEBHOOK_DLQ_RETENTION_DAYS=30

# Session Management
MAX_SESSIONS_PER_USER=5

# Velocity Shipfast
VELOCITY_BASE_URL=https://shazam.velocity.in
VELOCITY_USERNAME=your_velocity_username
VELOCITY_PASSWORD=your_velocity_password
VELOCITY_TEST_WAREHOUSE_ID=your_warehouse_id
VELOCITY_DEFAULT_ORIGIN_PINCODE=110001
USE_VELOCITY_API_RATES=false

# Feature Flags
USE_DYNAMIC_PRICING=false  # Set to true to enable RateCard-based pricing (Phase 0)

# Courier APIs (empty for now)
DELHIVERY_API_KEY=
DTDC_API_KEY=
DTDC_CUSTOMER_CODE=
BLUEDART_LICENSE_KEY=
BLUEDART_LOGIN_ID=
XPRESSBEES_API_KEY=

# Shopify
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_WEBHOOK_SECRET=

# Razorpay (Payouts & Payment Gateway)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_ACCOUNT_NUMBER=
RAZORPAY_WEBHOOK_SECRET=

# ShipCrowd Business Details (for Invoicing)
SHIPCROWD_GSTIN=your_gstin_here
SHIPCROWD_PAN=your_pan_here
APP_URL=http://localhost:5005

# GSTN IRN (e-Invoice) Configuration
# Leave GSTN_API_URL empty to run in MOCK mode
GSTN_API_URL=
GSTN_CLIENT_ID=
GSTN_CLIENT_SECRET=
GSTN_USERNAME=
GSTN_PASSWORD=
IRN_THRESHOLD_AMOUNT=50000

# MFA
MFA_ENCRYPTION_KEY=<generated-16-char-key>
