{
  "info": {
    "name": "Shipcrowd Delhivery",
    "description": "Comprehensive collection for testing Delhivery API integration with Shipcrowd. This collection includes endpoints for authentication, order creation, shipment tracking, label generation, and serviceability checks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"{{delhiveryUsername}}\",\n    \"password\": \"{{delhiveryPassword}}\"\n}"
            },
            "url": {
              "raw": "{{delhiveryBaseUrl}}/ums/login",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "ums",
                "login"
              ]
            },
            "description": "Authenticate with Delhivery API and obtain access token."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for Delhivery API"
    },
    {
      "name": "2. Shipment Management",
      "item": [
        {
          "name": "Create Shipment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{delhiveryToken}}",
                "description": "Delhivery access token"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"pickup_location\": \"{{pickupLocation}}\",\n    \"dropoff_location\": {\n        \"consignee\": \"{{customerName}}\",\n        \"address\": \"{{billingAddress}}\",\n        \"city\": \"{{billingCity}}\",\n        \"region\": \"{{billingState}}\",\n        \"zip\": \"{{billingPincode}}\",\n        \"phone\": \"{{customerPhone}}\"\n    },\n    \"d_mode\": \"{{paymentMode}}\",\n    \"amount\": {{codAmount}},\n    \"rov_insurance\": {{rovInsurance}},\n    \"invoices\": [\n        {\n            \"invoice_number\": \"{{invoiceNumber}}\",\n            \"invoice_date\": \"{{invoiceDate}}\",\n            \"invoice_amount\": {{invoiceAmount}}\n        }\n    ],\n    \"weight\": {{packageWeight}},\n    \"suborders\": [\n        {\n            \"suborder_id\": \"{{orderId}}\",\n            \"product\": \"{{productName}}\",\n            \"quantity\": {{productQuantity}},\n            \"value\": {{productPrice}}\n        }\n    ],\n    \"dimensions\": {\n        \"length\": {{packageLength}},\n        \"breadth\": {{packageBreadth}},\n        \"height\": {{packageHeight}}\n    },\n    \"consignee_gst_tin\": \"\",\n    \"seller_gst_tin\": \"\"\n}"
            },
            "url": {
              "raw": "{{delhiveryBaseUrl}}/v3/manifest",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "v3",
                "manifest"
              ]
            },
            "description": "Create a new shipment in Delhivery"
          },
          "response": []
        },
        {
          "name": "Get Manifest",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{delhiveryToken}}",
                "description": "Delhivery access token"
              }
            ],
            "url": {
              "raw": "{{delhiveryBaseUrl}}/v3/manifest?job_id={{jobId}}",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "v3",
                "manifest"
              ],
              "query": [
                {
                  "key": "job_id",
                  "value": "{{jobId}}",
                  "description": "Job ID received from create shipment response"
                }
              ]
            },
            "description": "Get manifest details for a shipment"
          },
          "response": []
        },
        {
          "name": "Track Shipment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{delhiveryToken}}",
                "description": "Delhivery access token"
              }
            ],
            "url": {
              "raw": "{{delhiveryBaseUrl}}/v3/track/{{awbNumber}}",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "v3",
                "track",
                "{{awbNumber}}"
              ]
            },
            "description": "Track a shipment using AWB number"
          },
          "response": []
        },
        {
          "name": "Cancel Shipment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{delhiveryToken}}",
                "description": "Delhivery access token"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"awb\": \"{{awbNumber}}\"\n}"
            },
            "url": {
              "raw": "{{delhiveryBaseUrl}}/v3/shipments/cancel",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "v3",
                "shipments",
                "cancel"
              ]
            },
            "description": "Cancel a shipment using AWB number"
          },
          "response": []
        }
      ],
      "description": "Endpoints for shipment management in Delhivery"
    },
    {
      "name": "3. Serviceability",
      "item": [
        {
          "name": "Check Serviceability",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{delhiveryToken}}",
                "description": "Delhivery access token"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"origin\": \"{{pickupPincode}}\",\n    \"destination\": \"{{deliveryPincode}}\",\n    \"payment_type\": \"{{paymentType}}\",\n    \"order_amount\": {{shipmentValue}},\n    \"weight\": {{weight}},\n    \"length\": {{packageLength}},\n    \"breadth\": {{packageBreadth}},\n    \"height\": {{packageHeight}}\n}"
            },
            "url": {
              "raw": "{{delhiveryBaseUrl}}/v3/serviceability",
              "host": [
                "{{delhiveryBaseUrl}}"
              ],
              "path": [
                "v3",
                "serviceability"
              ]
            },
            "description": "Check serviceability between two pincodes"
          },
          "response": []
        },
        {
          "name": "Check Pincode",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{delhiveryApiKey}}",
                "description": "Delhivery API key"
              }
            ],
            "url": {
              "raw": "https://staging-express.delhivery.com/c/api/pin-codes/json/?filter_codes={{pickupPincode}},{{deliveryPincode}}",
              "protocol": "https",
              "host": [
                "staging-express",
                "delhivery",
                "com"
              ],
              "path": [
                "c",
                "api",
                "pin-codes",
                "json",
                ""
              ],
              "query": [
                {
                  "key": "filter_codes",
                  "value": "{{pickupPincode}},{{deliveryPincode}}",
                  "description": "Comma-separated list of pincodes to check"
                }
              ]
            },
            "description": "Check if pincodes are serviceable"
          },
          "response": []
        }
      ],
      "description": "Endpoints for checking serviceability in Delhivery"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default values for Delhivery API testing",
          "if (!pm.environment.get('delhiveryUsername')) {",
          "    pm.environment.set('delhiveryUsername', 'your-delhivery-username');",
          "}",
          "if (!pm.environment.get('delhiveryPassword')) {",
          "    pm.environment.set('delhiveryPassword', 'your-delhivery-password');",
          "}",
          "if (!pm.environment.get('delhiveryApiKey')) {",
          "    pm.environment.set('delhiveryApiKey', 'your-delhivery-api-key');",
          "}",
          "if (!pm.environment.get('orderId')) {",
          "    pm.environment.set('orderId', 'TEST-' + Date.now());",
          "}",
          "if (!pm.environment.get('invoiceNumber')) {",
          "    pm.environment.set('invoiceNumber', 'INV-' + Date.now());",
          "}",
          "if (!pm.environment.get('invoiceDate')) {",
          "    const today = new Date();",
          "    const day = String(today.getDate()).padStart(2, '0');",
          "    const month = String(today.getMonth() + 1).padStart(2, '0');",
          "    const year = today.getFullYear();",
          "    pm.environment.set('invoiceDate', `${year}-${month}-${day}`);",
          "}",
          "if (!pm.environment.get('invoiceAmount')) {",
          "    pm.environment.set('invoiceAmount', 999);",
          "}",
          "if (!pm.environment.get('codAmount')) {",
          "    pm.environment.set('codAmount', 0);",
          "}",
          "if (!pm.environment.get('rovInsurance')) {",
          "    pm.environment.set('rovInsurance', false);",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "delhiveryToken",
      "value": "",
      "type": "string",
      "description": "Delhivery API access token"
    },
    {
      "key": "jobId",
      "value": "",
      "type": "string",
      "description": "Job ID for manifest retrieval"
    },
    {
      "key": "awbNumber",
      "value": "",
      "type": "string",
      "description": "AWB number for tracking shipment"
    },
    {
      "key": "paymentMode",
      "value": "Prepaid",
      "type": "string",
      "description": "Payment mode (Prepaid or COD)"
    },
    {
      "key": "paymentType",
      "value": "prepaid",
      "type": "string",
      "description": "Payment type (prepaid or cod)"
    }
  ]
}